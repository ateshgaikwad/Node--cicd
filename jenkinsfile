pipeline {
    agent {
        docker{
            image 'node:18-alpine' 
        }
    }
    environment {
    NPM_CONFIG_CACHE = "${WORKSPACE}/.npm"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build Complete') {
            steps {
                echo "Node.js app is ready!"
            }
        }
        stage('Deploy') {
            steps {
            sh '''
            ssh -o StrictHostKeyChecking=no ubuntu@13.232.194.226 "mkdir -p /var/www/nodeapp"
            rsync -avz --exclude=node_modules/ ./ ubuntu@13.232.194.226:/var/www/nodeapp
            ssh ubuntu@13.232.194.226 "
                cd /var/www/nodeapp &&
                npm install &&
                pm2 restart all || pm2 start server.js
            "
            '''
    }
}

    }
}
