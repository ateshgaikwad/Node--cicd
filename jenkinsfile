pipeline {
    agent {
        docker{
        {image 'node:18-alpine' }
        }
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build Complete') {
            steps {
                echo "Node.js app is ready!"
            }
        }
    }
}
